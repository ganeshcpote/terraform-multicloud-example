pipeline {
  agent any

  parameters {
        string(name: 'app_name', defaultValue: 'test1', description: 'Provide Application name to be deploy') 
		choice(name: 'app_environment', choices: ['dev', 'qa', 'pre-prod', 'prod'], description: 'Specify environment' )
		choice(name: 'aws_region', choices: ['us-east-1', 'us-east-2'], description: 'Specify aws region' )
		choice(name: 'instance_type', choices: ['t2.micro', 't2.medium'], description: 'Specify instance type' )
    }
  stages {
   stage('Preparations') {
      steps {
	sh 'pwd'
	withCredentials ([usernamePassword(credentialsId: 'aws_credentails', usernameVariable: 'aws_access_key', passwordVariable: 'aws_secret_key')]) {
	   sh "echo aws_access_key=${aws_access_key} \n >> aws/${BUILD_ID}_terraform.tfvars"
	   sh "echo aws_secret_key=${aws_secret_key} \n >> aws/${BUILD_ID}_terraform.tfvars"
           sh "echo app_name=${app_name} \n >> aws/${BUILD_ID}_terraform.tfvars"
	   sh "echo app_environment=${app_environment} \n >> aws/${BUILD_ID}_terraform.tfvars"
	   sh "echo aws_region=${aws_region} \n >> aws/${BUILD_ID}_terraform.tfvars"
	   sh "echo instance_type=${instance_type} \n >> aws/${BUILD_ID}_terraform.tfvars"
	}
	sh 'cat aws/${BUILD_ID}_terraform.tfvars'
      }
    }
    stage('Terraform Init') {
      steps {
	sh "cd aws/"
	sh 'pwd'
        sh "terraform init"
      }
    }
    stage('Terraform Plan') {
      steps {
	sh "cd aws/"
	sh 'pwd'
        sh "terraform plan -out=tfplan -var-file=aws/${BUILD_ID}_terraform.tfvars"
        sh "terraform show -no-color tfplan > aws/${BUILD_ID}_tfplan.txt"
      }
    }
  }
  post {
        always {
            archiveArtifacts artifacts: "${BUILD_ID}_tfplan.txt"
        }
    }
}
